{
    "manifests": {
        "agence-adeliom/easy-editor-bundle": {
            "manifest": {
                "bundles": {
                    "Adeliom\\EasyEditorBundle\\EasyEditorBundle": [
                        "all"
                    ]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/",
                    "src/": "%SRC_DIR%/",
                    "templates/": "templates/"
                }
            },
            "files": {
                "config/packages/easy_editor.yaml": {
                    "contents": [
                        "twig:",
                        "  form_themes:",
                        "    - '@EasyMedia/form/easy-media.html.twig'",
                        "",
                        "doctrine:",
                        "  dbal:",
                        "    types:",
                        "      easy_editor_type: Adeliom\\EasyEditorBundle\\Types\\EasyEditorType",
                        ""
                    ],
                    "executable": false
                },
                "src/Blocks/.gitignore": {
                    "contents": [
                        ""
                    ],
                    "executable": false
                },
                "src/Blocks/HeadingType.php": {
                    "contents": [
                        "<?php",
                        "",
                        "declare(strict_types=1);",
                        "",
                        "namespace App\\Blocks;",
                        "",
                        "use Adeliom\\EasyEditorBundle\\Block\\AbstractBlock;",
                        "use Symfony\\Component\\Form\\Extension\\Core\\Type\\ChoiceType;",
                        "use Symfony\\Component\\Form\\Extension\\Core\\Type\\TextType;",
                        "use Symfony\\Component\\Form\\FormBuilderInterface;",
                        "use Symfony\\Component\\Validator\\Constraints as Assert;",
                        "",
                        "class HeadingType extends AbstractBlock",
                        "{",
                        "    public function buildBlock(FormBuilderInterface $builder, array $options): void",
                        "    {",
                        "        $builder",
                        "            ->add('type', ChoiceType::class, [",
                        "                'required' => true,",
                        "                'choices' => [",
                        "                    'H1' => 'h1',",
                        "                    'H2' => 'h2',",
                        "                    'H3' => 'h3',",
                        "                ],",
                        "            ])",
                        "            ->add('heading', TextType::class, [",
                        "                'required' => true,",
                        "                'constraints' => [",
                        "                    new Assert\\NotBlank(),",
                        "                    new Assert\\Length(['min' => 3]),",
                        "                ],",
                        "            ])",
                        "        ;",
                        "    }",
                        "",
                        "    public function getName(): string",
                        "    {",
                        "        return 'Heading';",
                        "    }",
                        "",
                        "    public function getIcon(): string",
                        "    {",
                        "        return '<span class=\"fas fa-heading\"></span>';",
                        "    }",
                        "",
                        "    public function getTemplate(): string",
                        "    {",
                        "        return 'block/heading.html.twig';",
                        "    }",
                        "}",
                        ""
                    ],
                    "executable": false
                },
                "templates/blocks/.gitignore": {
                    "contents": [
                        ""
                    ],
                    "executable": false
                },
                "templates/blocks/heading.html.twig": {
                    "contents": [
                        "{% set headType = block.type|default('h1') %}",
                        "<{{ headType }}>{{ block.heading }}</{{ headType }}>",
                        ""
                    ],
                    "executable": false
                }
            },
            "ref": "c0aa82237fcb8ddaa19fc3a3457bae2304bc5df5"
        }
    }
}
